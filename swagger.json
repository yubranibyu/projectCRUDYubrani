{
  "swagger": "2.0",
  "info": {
    "title": "Users & Products API",
    "description": "API for managing users and products",
    "version": "1.0.0"
  },
  "host": "projectcrudyubrani.onrender.com",
  "basePath": "/",
  "schemes": ["https"],
  "paths": {
    "/": {
      "get": {
        "tags": ["Status"],
        "summary": "Home Route",
        "responses": {
          "200": { "description": "Server is running" }
        }
      }
    },
    "/products": {
      "get": {
        "tags": ["Products"],
        "summary": "Get all products",
        "parameters": [
          
        ],
        "responses": {
          "200": { "description": "List of products" },
          "500": { "description": "Server error" }
        }
      },
      "post": {
        "tags": ["Products"],
        "summary": "Create a new product",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["productName", "price", "color", "size"],
              "properties": {
                "productName": { "type": "string" },
                "price": { "type": "number" },
                "color": { "type": "string" },
                "size": { "type": "string" }
              },
              "example": {
                "productName": "Laptop Gamer",
                "price": 1500,
                "color": "Black",
                "size": "15.6 inches"
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "Product created" },
          "400": { "description": "Validation error" },
          "500": { "description": "Server error" }
        }
      }
    },
    "/products/{id}": {
      "get": {
        "tags": ["Products"],
        "summary": "Get product by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "Product found" },
          "404": { "description": "Not Found" }
        }
      },
      "put": {
        "tags": ["Products"],
        "summary": "Update product by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "in": "body",
            "name": "body",
            "schema": {
              "type": "object",
              "properties": {
                "productName": { "type": "string" },
                "price": { "type": "number" },
                "color": { "type": "string" },
                "size": { "type": "string" }
              },
              "example": {
                "productName": "Updated Product",
                "price": 1200,
                "color": "White",
                "size": "17 inches"
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "Product updated" },
          "400": { "description": "Validation error" },
          "500": { "description": "Server error" }
        }
      },
      "delete": {
        "tags": ["Products"],
        "summary": "Delete product by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "Product deleted" },
          "500": { "description": "Server error" }
        }
      }
    },

    "/users": {
      "get": {
        "tags": ["Users"],
        "summary": "Get all users",
        "responses": {
          "200": { "description": "List of users" },
          "500": { "description": "Server error" }
        }
      },
      "post": {
        "tags": ["Users"],
        "summary": "Create a new user",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "type": "object",
              "required": ["FirstName", "LastName", "email"],
              "properties": {
                "FirstName": { "type": "string" },
                "LastName": { "type": "string" },
                "email": { "type": "string" },
                "favoriteColor": { "type": "string" },
                "birthday": { "type": "string" }
              },
              "example": {
                "FirstName": "John",
                "LastName": "Doe",
                "email": "john@example.com",
                "favoriteColor": "Blue",
                "birthday": "1990-01-01"
              }
            }
          }
        ],
        "responses": {
          "201": { "description": "User created" },
          "400": { "description": "Validation error" },
          "500": { "description": "Server error" }
        }
      }
    },

    "/users/{id}": {
      "get": {
        "tags": ["Users"],
        "summary": "Get user by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "User found" },
          "404": { "description": "Not found" }
        }
      },
      "put": {
        "tags": ["Users"],
        "summary": "Update user by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "in": "body",
            "name": "body",
            "schema": {
              "type": "object",
              "properties": {
                "FirstName": { "type": "string" },
                "LastName": { "type": "string" },
                "email": { "type": "string" },
                "favoriteColor": { "type": "string" },
                "birthday": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "User updated" },
          "500": { "description": "Server error" }
        }
      },
      "delete": {
        "tags": ["Users"],
        "summary": "Delete user by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "User deleted" }
        }
      }
    }
  }
}
